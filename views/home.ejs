<%- include("partials/header.ejs") %>

<!-- NBA LOGO -->
<div class="text-center">
   <a href="/"><img src="/images/nba-logo.svg" alt="NBA logo" id="logoNBA" /></a>
</div>
<div class="container">
   <div class="container-fluid">
      <div class="filters">
         <!-- Filter function call -->
         <h4 class="p-2"> Filters: </h4>
         <div id="filterc">
            <select class="form-select form-selectmd" id="filterC" label="Conference">
               <option selected disabled>Conference</option>
               <option value="1">Eastern Conference</option>
               <option value="2">Western Conference</option>
            </select>
         </div>
         <div id="filterd">
            <select class="form-select form-selectmd" id="filterD" aria-label="Divisions">
               <option selected disabled>Division</option>
               <option value="1">Atlantic Division</option>
               <option value="2">Central Division</option>
               <option value="3">Southeast Division</option>
               <option value="4">Northwest Division</option>
               <option value="5">Pacific Division</option>
               <option value="6">Southwest Division</option>
            </select>
         </div>
      </div>
      <hr>
      <div class="row justifiy-content-evenly">
         <!-- TEAM CARD -->
         <%# EJS CODE %>
         <% teamData.forEach(function(team) { %>
         <div class="col-lg-3 col-md-3 col-sm-12 card shadow hvr-grow teamCard" data-conference="<%= team.conference %>" data-division="<%= team.division %>">
            <img class="mr-3" src="<%= team.logo %>" alt="Card image cap" />

            <% var teampath= team.team;
               teampath=teampath.split(" ").join("_");
               teampath=teampath.toLowerCase();
               teampath="/teams/"+teampath;
               %>
              <a id="teamtextLink" href="<%= teampath %>"><span id="teamtext"><%= team.team %></span></a>
            <% if (team.favoriteTeamStatus) { %>
              <span class="unfavoriteTeam" title="Remove Team from Favorites"><i class="fa fa-star"></i></span>
              <%} else { %>
              <span class="favoriteTeam" title="Add Team to Favorites"><i class="fa fa-star-o"></i></span>
              <% } %>

         </div>
         <% }); %>
         <%# END EJS CODE %>
      </div>
   </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/js-cookie@rc/dist/js.cookie.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<%- include("partials/footer.ejs") %>
